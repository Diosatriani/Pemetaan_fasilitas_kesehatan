<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21edb0">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FASILITAS KESEHATAN "
                android:textSize="28dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:background="#21edb0"
        android:layout_height="210dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_maps"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#71f797">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="95dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_pin_drop"
                        app:civ_border_color="#22de89"
                        app:civ_border_width="3dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cardview_shadow_start_color"
                        android:layout_marginTop="20sp"
                        android:textStyle="italic|bold"
                        android:text="   Maps"
                        android:textSize="23sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_list"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                app:cardBackgroundColor="#bfc6c6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="95dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_list_black_24dp"
                        app:civ_border_color="#f7f8f9"
                        app:civ_border_width="3dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cardview_shadow_start_color"
                        android:layout_marginTop="20sp"
                        android:text="   List"
                        android:textStyle="italic|bold"
                        android:textSize="23sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_about"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="#d2e627"
            android:layout_width="180dp"
            android:layout_height="150dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#d23734"
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    app:civ_border_width="3dp"/>

                <TextView
                    android:layout_marginTop="20sp"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="   About"
                    android:textSize="23sp"
                    android:textStyle="italic|bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_exit"
            app:cardBackgroundColor="#f1401d"
            android:layout_width="180dp"
            android:layout_height="150dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_exit_to_app_black_24dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#dcd13b"
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    app:civ_border_width="3dp"/>

                <TextView
                    android:text="   Exit"
                    android:layout_marginTop="20sp"
                    android:background="@color/cardview_shadow_start_color"
                    android:textSize="23sp"
                    android:textStyle="italic|bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>